<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#C3CAD4"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="系统镜像"
            android:textSize="20dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/offline_win10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="windows 镜像部署"
            android:gravity="left|center"
            android:layout_margin="10dp"

            />

        <Button
            android:id="@+id/backup_efi"
            android:text="windows efi 备份"
            android:gravity="left|center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<!--
        <ImageButton
            android:id="@+id/offline"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/disk"
            android:layout_margin="10dp"
            />
	    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云端"
            android:textSize="15dp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/online_win10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="windows 镜像下载"
            android:gravity="left|center"
            android:layout_margin="10dp"
            />
<!--
	<ImageButton
            android:id="@+id/online"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/online"
            android:layout_margin="10dp"
            />
	    -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            >

        <Button
            android:id="@+id/helpMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="帮助信息"
            android:textSize="15dp" />
        </LinearLayout>


</LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E6E6E6" />

    <LinearLayout
        android:id="@+id/targetdisk"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="目标分区"
            android:textSize="20dp"
            android:textColor="#000000"
            />

        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始部署" />
    </LinearLayout>
</LinearLayout>
